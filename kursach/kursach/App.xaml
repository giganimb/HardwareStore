<Application x:Class="kursach.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:kursach"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views\Windows\Resources\MainWindow\Styles\DarkTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Views\Windows\Resources\MainWindow\Styles\LightTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Views\Windows\Resources\MainWindow\Styles\MainTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
